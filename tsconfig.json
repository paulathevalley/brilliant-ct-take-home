{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"]
    },
    "types": ["astro/client"]
  },
  "include": ["@types/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.mjs", "src/**/*"],
  "exclude": ["node_modules"]
}